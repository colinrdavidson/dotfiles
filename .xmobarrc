Config { font         = "xft:Monospace:pixelsize=11"
       , bgColor = "#222222"
       , fgColor = "#aaaaaa"
       , position = Top
       , lowerOnStart = False
       , commands = [ Run Cpu ["-L","3","-H","50","--high","#f0c040"] 10
                    , Run Memory ["-t","Mem: <usedratio>%"] 10
                    , Run Swap [] 10
                    , Run StdinReader
                    , Run Weather "CYVV" ["-t","<station>: <tempC>C","-L","18","-H","25","--normal","green","--high","red","--low","lightblue"] 3600
                    ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = "%StdinReader%}{%CYVV% 路 %cpu% 路 %memory% 路 %swap% 路 %date%"
       }
