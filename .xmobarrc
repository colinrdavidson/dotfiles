Config { font         = "xft:Monospace:pixelsize=11"
       , bgColor = "#222222"
       , fgColor = "#aaaaaa"
       , position = Top
       , lowerOnStart = False
       , commands = [ Run Cpu ["-H", "50", "-h", "red"] 10
                    , Run Memory ["-t","Mem: <usedratio>%",
                                  "-H", "50", "-h", "red"] 10
                    , Run Swap [] 10
                    , Run StdinReader
                    , Run Weather "CYVV" ["-t", "<station>:<tempC>C",
                                          "-L", "0", "-l", "lightblue", 
                                          "-H", "25", "-h", "red"] 3600
                    , Run Battery ["-t", "<acstatus>:<left>%(<timeleft>)",
                                   "-L", "20", "-l", "red", 
                                   "-H", "95", "-h", "green",
                                   "--", "-f", "AC0/online",
                                   "-O", "<fc=lightgreen>Charging</fc>", "-o", "Discharging"
                                   ] 10
                    ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = "%StdinReader%}{%CYVV% · %cpu% · %memory% · %swap% · %battery% · %date% "
}
